extends regLayout

block register
    .cover
        .cover-img
            img(src='../img/login/bg-2.jpg', alt='uitzicht op landschap')
        .cover-bg
    .container-fluid
        .row-fluid
            .login-body
                .col-md-4.col-md-offset-4
                    h2 Sign Up
                    .row
                        .col-sm-4
                            a.button.btn-social.facebook.span-left.btn-block(href='#')
                                span
                                    i.fa.fa-facebook
                                | Facebook
                        .col-sm-4
                            a.button.btn-social.twitter.span-left.btn-block(href='#')
                                span
                                    i.fa.fa-twitter
                                | Twitter
                        .col-sm-4
                            a.button.btn-social.googleplus.span-left.btn-block(href='#')
                                span
                                    i.fa.fa-google-plus
                                | Google+
                    .section-divider-reg
                    form(action='register.html', method='POST')
                        .form-group
                            label.control-label Name
                            .row
                                .col-md-6
                                    input.form-control.input-lg(type='text', placeholder='First name')
                                .col-md-6
                                    input.form-control.input-lg(type='text', placeholder='Last name')
                        .form-group
                            label.control-label Email
                            .row
                                .col-md-12
                                    input.form-control.input-lg(type='text', placeholder='Email address')
                        .form-group
                            label.control-label  Password
                            .row
                                .col-md-12
                                    input.form-control.input-lg(type='password', placeholder='Password')
                        .form-group
                            label.control-label Re-enter Password
                            .row
                                .col-md-12
                                    input.form-control.input-lg(type='password', placeholder='Re-enter password')
                        button.btn.btn-success.btn-block.btn-lg(type='submit') Sign me Up
                        .m-t-20
                            | Already a member? Click
                            a.reg(href='login') here
                            |  to login.
                    p
                        | By clicking Sign Up, you agree to our Terms and that you have read our Cookie Use.
