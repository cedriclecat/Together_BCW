extends ./layout

block login
    header
        nav.navbar.navbar-default.navbar-fixed-top
            .container-fluid
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                .navbar-header
                    a.navbar-brand(href='#') TogetheR
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/') Home
                        li
                            a(href='events') Events
                        li
                            a(href='groups') Groups
                        li
                            a(href='login')
                                button.btn.btn-default.navbar-btn(type='button') Sign in
    .cover
        .cover-img
            img(src='../img/login/bg-2.jpg', alt='uitzicht op landschap')
        .cover-bg
    .container-fluid
        .row-fluid
            .login-body
                .col-md-4.col-md-offset-4
                    h2 Sign in or Sign up with
                    a.button.btn-social.facebook.span-left.btn-block(href='/auth/facebook')
                        span
                            i.fa.fa-facebook
                        | Facebook
                    a.button.btn-social.twitter.span-left.btn-block(href='/auth/twitter')
                        span
                            i.fa.fa-twitter
                        | Twitter
                    a.button.btn-social.googleplus.span-left.btn-block(href='/auth/google')
                        span
                            i.fa.fa-google-plus
                        | Google+
                    .checkbox.m-b-20
                        label
                            input(type='checkbox')
                            |  Remember Me
                    p Je gaat akkoord met het Privacybeleid van TogetheR.
