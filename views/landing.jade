extends layout

block landing
    header
        nav.navbar.navbar-default.navbar-fixed-top
            .container-fluid
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                .navbar-header
                    h1.navbar-brand TogetheR
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li.active
                            a(href='/') Home
                        li
                            a(href='/events') Events
                        li
                            a(href='/groups') Groups
                        if(admin === true)
                            li
                                a(href='/admin') Admin
                        if(toon === true)
                            li.dropdown
                                    a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                        img.profile-image.img-circle(src='#{foto}')
                                        |  #{name}
                                        span.caret
                                    ul.dropdown-menu
                                        li
                                            a(href='/profile')
                                                span.glyphicon.glyphicon-user(aria-hidden='true')
                                                |  My Profile
                                        li
                                            a(href='/help')
                                                i.fa.fa-commenting
                                                | Help
                                        li.divider(role='separator')
                                        li
                                            a(href='/logout')
                                                span.glyphicon.glyphicon-log-out(aria-hidden='true')
                                                |  Logout
                        if(toon === false)
                            li
                                a(href='/login',title='sign in')
                                    button.btn.btn-default.navbar-btn(type='button') Sign in
    .slider
        #myCarousel.carousel.slide(data-ride='carousel')
            .carousel-inner
                for result in data
                    if(result.id == data[0].id)
                        .item.active
                            img(data-src='#{result.pictureSlider}', alt='Slide show', src='#{result.pictureSlider}')
                            .carousel-caption
                                h2 #{result.name}
                                p #{result.description}
                    else
                        .item
                            img(data-src='#{result.pictureSlider}', alt='Slide show', src='#{result.pictureSlider}')
                            .carousel-caption
                                h2 #{result.name}
                                p #{result.description}
            // Controls
            a.left.carousel-control(href='#myCarousel', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                span.sr-only Previous
            a.right.carousel-control(href='#myCarousel', data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                span.sr-only Next
    .container-fluid
        .row
            .col-md-6
                .trending
                    img.img.img-responsive(src='#{trend.pictureUrl}', alt='Trending Event')
                    h2 #{trend.name}
                    p
                        | #{trend.description}
            .col-md-6
                .new
                    img.img.img-responsive(src='#{newe.pictureUrl}', alt='New Event')
                    h2 #{newe.name}
                    p
                        | #{newe.description}
        .row
            .col-md-12
                .promoted
                    h2 Promoted
                    img.img.img-responsive(src='#{prom.pictureUrl}', alt='Promoted')
                    button.btn.btn-info.btn-responsive.btn-lg #{prom.name}

    footer.footer
        .container-fluid
            .row
                p.text-muted Project Front & Back end Development ( Brecht Tourlousse, Cedric Lecat & Wouter Dumon )
                a(href='#')
                    span.glyphicon.glyphicon-menu-up.bck-to-top(aria-hidden='true')
    script(type='text/javascript', src='/dist/js/jquery.min.js',defer)
    script(type='text/javascript', src='/dist/js/bootstrap.min.js',defer)
    script(type='text/javascript', src='/dist/js/together.min.js',defer)